<div id="experienceArray" class="flex flex-col gap-5">
  <div class="flex flex-col gap-2 border-2 border-gray-100 rounded-md p-5">
    <% data.forEach(item => { %>
    <label class="text-base text-gray-600"> <%= item.label %> </label>

    <% if (item.textarea) { %>
    <textarea
      type="text"
      rows="3"
      name="<%= item.id %>"
      id="<%= item.id %>[0]"
      placeholder="<%= item.placeholder %>"
      class="px-3 py-3 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
    ></textarea>
    <% }else { %>
    <input
      type="text"
      name="<%= item.id %>"
      id="<%= item.id %>[0]"
      placeholder="<%= item.placeholder %>"
      class="px-3 py-3 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
    />
    <% }%><% }) %>
  </div>
</div>
